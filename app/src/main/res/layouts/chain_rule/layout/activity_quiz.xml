    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.399"-->
    <!--        app:layout_constraintStart_toStartOf="parent">-->

    <com.agog.mathdisplay.MTMathView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:translationY="140dp"
        android:translationX="70dp"
        android:textSize="400sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />
    <!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:translationY="160dp"
        tools:layout_editor_absoluteY="160dp">

        <Button
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_margin="14dp"
            android:background="@color/astonPurple"
            android:onClick="onClick"
            android:padding="8dp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:translationY="240dp">

        <Button
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_margin="14dp"
            android:background="@color/astonPurple"
            android:onClick="onClick"
            android:padding="8dp"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:translationY="320dp">

        <Button
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/astonPurple"
            android:layout_margin="14dp"
            android:onClick="onClick"
            android:padding="8dp"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:translationY="410dp">

        <Button
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/astonPurple"
            android:layout_margin="14dp"
            android:onClick="onClick"
            android:padding="8dp"
            android:textColor="@color/white" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/scoreSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:translationY="-60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/score_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/astonPurple"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="14dp"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Score:"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/astonPurple"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="14dp"
            android:text="0/0"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/white" />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/quizNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/astonOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>