<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.aston.calculusldc.HomeFragment">

    <!--        app:layout_constraintBaseline_toBaselineOf="@+id/IntButton"-->
<!--        app:layout_constraintEnd_toStartOf="@+id/IntButton"-->
<!--        app:layout_constraintHorizontal_bias="0.0"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->


    <Button
        android:id="@+id/DiffButton"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="359dp"
        android:layout_height="102dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:text="@string/differentiation_title"
        android:textAllCaps="false"
        android:textSize="40sp"
        app:defaultNavHost="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <Button
        android:id="@+id/IntegrationButton"
        android:layout_width="359dp"
        android:layout_height="102dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:text="@string/integration_title"
        android:textAllCaps="false"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DiffButton" />


</androidx.constraintlayout.widget.ConstraintLayout>