<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="root.differentiation.SavedFragment">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="29dp"
        tools:layout_editor_absoluteY="29dp">

        <TableRow
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp">


            <TextView
                android:id="@+id/topicHeader"
                style="@style/text_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:backgroundTint="@color/astonPurple"
                android:elevation="8dp"
                android:text="Topic"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/scoreHeader"
                style="@style/text_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:backgroundTint="@color/astonOrange"
                android:elevation="8dp"
                android:text="Score"
                android:textSize="13sp" />

        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_margin="16dp"
        android:translationY="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        tools:listitem="@layout/recyclerview_item" />


