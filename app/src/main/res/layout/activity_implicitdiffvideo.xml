<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".root.differentiation.ImplicitDiff.ImplicitDiffVidActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/implicitDiffNav"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/yVideoImplicit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--            First Video-->
        <ImageButton
            android:id="@+id/buttonImplicit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_play_arrow_24" />


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/yVideoImplicit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!--            Second Video-->
        <ImageButton
            android:id="@+id/buttonImplicit2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_play_arrow_24" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/implicitDiffNav"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        android:translationY="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>